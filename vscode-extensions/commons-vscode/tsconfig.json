{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6"
        ],
        "noImplicitAny": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "lib"
    },
    "include": [
        "src/**/*",
        "typings/**.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}