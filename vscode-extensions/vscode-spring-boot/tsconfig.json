{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"lib": [
			"es6"
		],
		"declaration": true,
		"outDir": "out",
		"sourceMap": true,
		"rootDir": ".",
		"skipLibCheck": true
	},
	"include": [
		"typings/*.d.ts",
		"lib/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}